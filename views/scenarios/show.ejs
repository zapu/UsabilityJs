<%-render("views/header.ejs", {PageTitle: "Scenario " + scenario.name})%>
<%-render("views/nav.ejs")%>

<div class="content-div">
	<h1>Scenario "<%= scenario.name %>"</h1>
	<p>
		<i>Site: "<%= site.name %>"</i>
	</p>
	<p class="description">
		<%- scenario.description %>
	</p>
	<p>
		<b>Tasks:</b><br/>
		<ol>
			<% scenario.tasks.forEach(function(task) { %>
				<li><%=task%></li>
			<% }); %>
		</ol>
	</p>
</div>

<div class="content-div">
	<p>
		Remember to set up your proxy.
		<br/>
		Clicking the "Begin test" button will redirect start test and redirect you to test page.
	</p>
	<p>
		<form method="POST" action="/tests/begin_new_test/">
		<input type="hidden" name="scenario_id" value="<%= scenario._id %>"/>
		<button name="submit">Begin test!</button>
		</form>
	</p>
</div>

<div class="content-div">
	<h2>Manage</h2>
	<ul>
		<li><a href="/scenarios/delete_scenario/<%=scenario._id%>">Remove Scenario</a></li>
		<li><a href="/scenarios/edit_scenario/<%=scenario._id%>">Edit Scenario</a></li>
	</ul>
</div>

<%-render("views/footer.ejs")%>